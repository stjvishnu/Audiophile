<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Sample Product - Product Page</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <script>
    tailwind.config = {
      theme: {
        extend: {
          fontFamily: {
            'sans': ['Inter', 'system-ui', 'sans-serif']
          }
        }
      }
    }
  </script>
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">
  <div class="min-h-screen py-8">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="bg-white rounded-2xl shadow-lg overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 p-6 lg:p-12">
          <!-- Left Side - Product Images -->
          <div class="flex gap-6">
            <div class="flex flex-col gap-4 flex-shrink-0">
              <div class="w-20 h-20 bg-gray-100 rounded-xl border-2 border-blue-500 overflow-hidden cursor-pointer hover:border-blue-600 transition-colors">
                <img src="https://via.placeholder.com/100x100?text=1" alt="Product thumbnail 1" class="w-full h-full object-cover">
              </div>
              <div class="w-20 h-20 bg-gray-100 rounded-xl border-2 border-gray-200 overflow-hidden cursor-pointer hover:border-blue-500 transition-colors">
                <img src="https://via.placeholder.com/100x100?text=2" alt="Product thumbnail 2" class="w-full h-full object-cover">
              </div>
              <div class="w-20 h-20 bg-gray-100 rounded-xl border-2 border-gray-200 overflow-hidden cursor-pointer hover:border-blue-500 transition-colors">
                <img src="https://via.placeholder.com/100x100?text=3" alt="Product thumbnail 3" class="w-full h-full object-cover">
              </div>
              <div class="w-20 h-20 bg-gray-100 rounded-xl border-2 border-gray-200 overflow-hidden cursor-pointer hover:border-blue-500 transition-colors">
                <img src="https://via.placeholder.com/100x100?text=4" alt="Product thumbnail 4" class="w-full h-full object-cover">
              </div>
            </div>

            <div class="flex-1 relative bg-gray-50 rounded-2xl overflow-hidden group min-h-[400px] flex items-center justify-center">
              <img src="https://via.placeholder.com/400x400?text=Main+Image" alt="Sample Product" class="max-w-full max-h-full object-contain p-8">
              <button class="absolute bottom-4 right-4 bg-white/90 backdrop-blur-sm p-3 rounded-full shadow-lg opacity-0 group-hover:opacity-100 transition-opacity hover:bg-white">
                <svg class="w-5 h-5 text-gray-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0zM10 7v3m0 0v3m0-3h3m-3 0H7"></path>
                </svg>
              </button>
            </div>
          </div>

          <!-- Right Side - Product Details -->
          <div class="space-y-6">
            <div class="flex items-center justify-between">
              <span class="text-lg font-medium text-gray-600">SampleBrand</span>
              <button class="p-2 rounded-full hover:bg-gray-100 transition-colors">
                <svg class="w-6 h-6 text-gray-400 hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
                </svg>
              </button>
            </div>

            <div class="space-y-2">
              <h1 class="text-3xl lg:text-4xl font-bold text-gray-900">Sample Product</h1>
              <p class="text-lg text-gray-600">This is a sample product description for testing purposes.</p>
            </div>

            <div class="flex items-center gap-2">
              <div class="flex items-center gap-1">
                <svg class="w-5 h-5 fill-yellow-400 text-yellow-400" viewBox="0 0 24 24">
                  <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/>
                </svg>
                <span class="font-semibold text-gray-900">4.5</span>
              </div>
              <span class="text-gray-500">(150 reviews)</span>
            </div>

            <div class="space-y-2">
              <div class="flex items-baseline gap-3">
                <span class="text-3xl font-bold text-gray-900">₹999</span>
                <span class="text-lg text-gray-500 line-through">MRP ₹1299</span>
              </div>
              <div class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">
                23% OFF
              </div>
            </div>

            <div class="space-y-3">
              <h3 class="font-medium text-gray-900">Color</h3>
              <div class="flex gap-3">
                <button class="w-10 h-10 rounded-full border-2 border-blue-500 shadow-sm hover:border-blue-500 transition-colors" style="background-color: #ff0000;" data-color="Red"></button>
                <button class="w-10 h-10 rounded-full border-2 border-gray-200 shadow-sm hover:border-blue-500 transition-colors" style="background-color: #0000ff;" data-color="Blue"></button>
              </div>
            </div>

            <div class="space-y-3">
              <h3 class="font-medium text-gray-900">Quantity</h3>
              <div class="flex items-center gap-4">
                <div class="flex items-center bg-gray-100 rounded-lg">
                  <button class="p-3 hover:bg-gray-200 rounded-l-lg transition-colors" onclick="decreaseQuantity()">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 12H4"></path>
                    </svg>
                  </button>
                  <span class="px-6 py-3 font-medium min-w-[60px] text-center" id="quantity">1</span>
                  <button class="p-3 hover:bg-gray-200 rounded-r-lg transition-colors" onclick="increaseQuantity()">
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6"></path>
                    </svg>
                  </button>
                </div>
                <span class="text-sm text-orange-600 font-medium">Only 5 left in stock</span>
              </div>
            </div>

            <div class="space-y-4 pt-4">
              <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-4 rounded-xl transition-colors text-lg">Add To Cart</button>
              <button class="w-full border-2 border-gray-300 hover:border-blue-600 hover:text-blue-600 font-medium py-4 rounded-xl transition-colors bg-transparent text-lg">Buy Now</button>
            </div>

            <div class="border-t pt-6 space-y-4">
              <h3 class="font-medium text-gray-900">Key Features</h3>
              <ul class="space-y-2 text-sm text-gray-600">
                <li class="flex items-center gap-2">
                  <div class="w-1.5 h-1.5 bg-blue-600 rounded-full flex-shrink-0"></div>
                  High-quality materials
                </li>
                <li class="flex items-center gap-2">
                  <div class="w-1.5 h-1.5 bg-blue-600 rounded-full flex-shrink-0"></div>
                  Lightweight design
                </li>
                <li class="flex items-center gap-2">
                  <div class="w-1.5 h-1.5 bg-blue-600 rounded-full flex-shrink-0"></div>
                  1-year warranty
                </li>
              </ul>
            </div>

            <div class="bg-blue-50 rounded-xl p-4 space-y-2">
              <div class="flex items-center gap-2 text-blue-800">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
                </svg>
                <span class="font-medium">Free Shipping</span>
              </div>
              <p class="text-sm text-blue-700">Estimated delivery: 3-5 business days</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    let quantity = 1;
    const maxStock = 5;

    function increaseQuantity() {
      if (quantity < maxStock) {
        quantity++;
        document.getElementById('quantity').textContent = quantity;
      }
    }

    function decreaseQuantity() {
      if (quantity > 1) {
        quantity--;
        document.getElementById('quantity').textContent = quantity;
      }
    }

    document.querySelectorAll('[data-color]').forEach(button => {
      button.addEventListener('click', function () {
        document.querySelectorAll('[data-color]').forEach(btn => {
          btn.classList.remove('border-blue-500');
          btn.classList.add('border-gray-200');
        });
        this.classList.remove('border-gray-200');
        this.classList.add('border-blue-500');
      });
    });
  </script>
</body>
</html>
