                                <p class="text-xs text-gray-500 mt-2">Interactive chart with monthly trends</p>
                            </div>
                        </div>
                    </div>

                    <!-- Recent orders -->
                    <div class="bg-darkest-gray rounded-xl p-6 shadow-md border border-gray-800">
                        <div class="flex items-center justify-between mb-6">
                            <h2 class="text-lg font-semibold">Recent Orders</h2>
                            <button class="text-white hover:text-gray-300 text-sm flex items-center nav-item">
