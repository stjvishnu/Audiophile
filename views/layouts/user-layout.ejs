<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Audiophile</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <!-- Font Awesome for icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- SweetAlert2 CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.min.css">

<!-- SweetAlert2 JS -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.5/dist/sweetalert2.min.js"></script>

    <style>
        @keyframes subtlePulse {
            0% { transform: translate(-50%, -50%) scale(0.95); }
            100% { transform: translate(-50%, -50%) scale(1.05); }
        }
    </style>
</head>
<body class="bg-white flex flex-col min-h-screen text-white relative">
    <!-- Background watermark logo - Corrected path (remove /public prefix) -->
    <img src="/images/Black-logo.png" alt="Watermark" 
    class="fixed top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 
           opacity-20 z-[-1] max-h-[40vh] md:max-h-[50vh] lg:max-h-[60vh] w-auto 
           max-w-[80%] md:max-w-[70%] lg:max-w-[60%] pointer-events-none 
           animate-[subtlePulse_15s_infinite_alternate]"
    loading="lazy">

    <!-- Header -->
    <%- include('../user/partials/header') %>

    <!-- Main Content -->
    <main class="flex-1 relative z-10 bg-white bg-opacity-5">
        <%- body %>
    </main>

    <!-- Footer -->
    <%- include('../user/partials/footer') %>

    <!-- Global JavaScript -->
    <script>
        // Toggle mobile menu
        document.getElementById('mobile-menu-button')?.addEventListener('click', function() {
            document.getElementById('mobile-menu').classList.toggle('hidden');
        });
        
        // Toggle mobile search
        document.getElementById('mobile-search-button')?.addEventListener('click', function() {
            document.getElementById('mobile-search').classList.toggle('hidden');
        });
        
        // Toggle dropdowns in mobile menu
        document.querySelectorAll('.mobile-dropdown-button')?.forEach(button => {
            button.addEventListener('click', function() {
                document.querySelectorAll('.mobile-dropdown-content').forEach(content => {
                    if (content !== this.nextElementSibling) content.classList.add('hidden');
                });
                this.nextElementSibling.classList.toggle('hidden');
            });
        });
        
        // Close dropdowns when clicking outside
        document.addEventListener('click', function(e) {
            if (!e.target.closest('.mobile-dropdown-button') && !e.target.closest('.mobile-dropdown-content')) {
                document.querySelectorAll('.mobile-dropdown-content').forEach(content => {
                    content.classList.add('hidden');
                });
            }
        });
    </script>
</body>
</html>