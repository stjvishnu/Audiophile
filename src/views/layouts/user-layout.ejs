    <style>
        @keyframes subtlePulse {
            0% { transform: translate(-50%, -50%) scale(0.95); }
            100% { transform: translate(-50%, -50%) scale(1.05); }
        }
        #splash-screen {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background-color: #ffffff; /* Match your brand color */
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 9999;
    transition: opacity 0.8s ease-out, visibility 0.8s;
}

#splash-screen.fade-out {
    opacity: 0;
    visibility: hidden;
}

/* Initial state: Hidden */
.hide-during-splash {
    opacity: 0;
    visibility: hidden;
    transition: opacity 1s ease-in;
}

/* State after splash is gone */
.show-after-splash {
    opacity: 1;
    visibility: visible;
}

#main-content {
    transition: opacity 1s ease-in;
}
    </style>
    <script>
        // Check ASAP before the body even renders
        if (sessionStorage.getItem('splashShown')) {
            document.documentElement.classList.add('splash-already-seen');
        }
    </script>
    
    <style>
        /* If seen, override the hidden state immediately */
        .splash-already-seen .hide-during-splash {
            opacity: 1 !important;
            visibility: visible !important;
        }
        .splash-already-seen #splash-screen {
            display: none !important;
        }
    </style>
