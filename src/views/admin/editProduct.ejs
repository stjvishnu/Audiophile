<!-- Modal Dialog -->
<div id="editProductModal" class="fixed inset-0 bg-black backdrop-blur-sm flex hidden items-center justify-center z-50 p-4">
  <div class="bg-white rounded-2xl max-w-7xl w-full max-h-[95vh] overflow-hidden shadow-2xl animate-scale-in">
    <!-- Header -->
    <div class="bg-black/90 px-8 py-6 text-white">
      <div class="flex items-center justify-between">
        <div>
          <h2 class="text-3xl font-bold animate-pulse-soft">Edit Product</h2>
          <p class="text-slate-300 mt-1">Update your product listing</p>
        </div>
        <button id="closeModalBtn" class="p-2 hover:bg-white/10 rounded-full transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
          </svg>
        </button>
      </div>
    </div>

    <!-- Body -->
    <div class="overflow-y-auto max-h-[calc(95vh-140px)]">
      <form id="editForm" class="p-8 space-y-8" data-product-id="">
        <!-- Basic Information Section -->
        <div class="bg-gray-200 rounded-xl p-6 animate-fade-in">
          <h3 class="text-xl font-semibold text-slate-800 mb-6 flex items-center gap-2">üìã Basic Information</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 text-black">
            <div class="lg:col-span-2">
              <label for="name" class="block text-sm font-medium text-slate-700 mb-2">Product Name *</label>
              <input id="name" name="name" required placeholder="Enter product name" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="name-error"></div>
            </div>
            <div>
              <label for="brand" class="block text-sm font-medium text-slate-700 mb-2">Brand *</label>
              <input id="brand" name="brand" required placeholder="Enter brand name" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="brand-error"></div>
            </div>
            <div>
              <label for="category" class="block text-sm font-medium text-slate-700 mb-2">Category *</label>
              <select id="category" name="category" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all">
                <option value="">Select category</option>
                <option value="headphones">Headphones</option>
                <option value="earbuds">IEM</option>
                <option value="speakers">TWS</option>
                <option value="accessories">Accessories</option>
              </select>
              <div class="text-red-500 text-sm hidden mt-1" id="category-error"></div>
            </div>
            <div>
              <label for="subCategory" class="block text-sm font-medium text-slate-700 mb-2">Sub Category *</label>
              <select id="subCategory" name="subCategory" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all">
                <option value="">Select level</option>
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
              </select>
              <div class="text-red-500 text-sm hidden mt-1" id="subCategory-error"></div>
            </div>
            <div>
              <label for="stock" class="block text-sm font-medium text-slate-700 mb-2">Stock *</label>
              <input id="stock" name="stock" type="number" required placeholder="0" min="0" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="stock-error"></div>
            </div>
            <div class="flex items-center">
              <div class="flex items-center space-x-3">
                <button type="button" id="isActiveToggle" class="relative inline-flex h-6 w-11 items-center rounded-full transition-colors bg-slate-600" data-active="true">
                  <span class="inline-block h-4 w-4 transform rounded-full bg-white transition-transform translate-x-6"></span>
                </button>
                <label class="text-sm font-medium text-slate-700">Product Active</label>
                <input type="hidden" name="isActive" id="isActive" value="true" />
              </div>
            </div>
          </div>
        </div>

        <!-- Product Technical Details -->
        <div class="bg-gray-200 rounded-xl p-6 animate-fade-in">
          <h3 class="text-xl font-semibold text-slate-800 mb-6 flex items-center gap-2">üéß Product Technical Details</h3>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 text-black">
            <div>
              <label for="driver" class="block text-sm font-medium text-slate-700 mb-2">Driver *</label>
              <input id="driver" name="driver" required placeholder="e.g., 40mm Dynamic" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="driver-error"></div>
            </div>
            <div>
              <label for="driverConfiguration" class="block text-sm font-medium text-slate-700 mb-2">Driver Configuration *</label>
              <input id="driverConfiguration" name="driverConfiguration" required placeholder="e.g., Dual Balanced Armature" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="driverConfiguration-error"></div>
            </div>
            <div>
              <label for="impedance" class="block text-sm font-medium text-slate-700 mb-2">Impedance *</label>
              <input id="impedance" name="impedance" required placeholder="e.g., 32Œ©" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="impedance-error"></div>
            </div>
            <div>
              <label for="soundSignature" class="block text-sm font-medium text-slate-700 mb-2">Sound Signature *</label>
              <input id="soundSignature" name="soundSignature" required placeholder="e.g., V-Shaped, Neutral, Bass-Heavy" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="soundSignature-error"></div>
            </div>
            <div>
              <label for="plug" class="block text-sm font-medium text-slate-700 mb-2">Plug *</label>
              <input id="plug" name="plug" required placeholder="e.g., 3.5mm, USB-C" class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all" />
              <div class="text-red-500 text-sm hidden mt-1" id="plug-error"></div>
            </div>
            <div>
              <label for="microphone" class="block text-sm font-medium text-slate-700 mb-2">Microphone *</label>
              <select id="microphone" name="microphone" required class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-slate-500 focus:border-transparent transition-all">
                <option value="">Select option</option>
                <option value="Yes">Yes</option>
                <option value="No">No</option>
              </select>
              <div class="text-red-500 text-sm hidden mt-1" id="microphone-error"></div>
            </div>
          </div>
        </div>

        <!-- Product Descriptions -->
        <div class="bg-gray-200 rounded-xl p-6 animate-fade-in" style="animation-delay: 100ms;">
          <h3 class="text-xl font-semibold text-slate-800 mb-6 flex items-center gap-2">üìù Product Description</h3>
          <div class="space-y-6 text-black">
            <div>
              <label for="description1" class="block text-sm font-medium text-slate-700 mb-2">Primary Description *</label>
              <textarea id="description1" name="description1" required rows="4" placeholder="Enter the main product description..." class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"></textarea>
              <div class="text-red-500 text-sm hidden mt-1" id="description1-error"></div>
            </div>
            <div>
              <label for="description2" class="block text-sm font-medium text-slate-700 mb-2">Secondary Description</label>
              <textarea id="description2" name="description2" rows="3" placeholder="Enter additional product details (optional)..." class="w-full px-4 py-3 border border-slate-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all resize-none"></textarea>
              <div class="text-red-500 text-sm hidden mt-1" id="description2-error"></div>
            </div>
          </div>
        </div>

        <!-- Variants -->
        <div class="flex justify-end">
          <button id="addVariantBtn" type="button" class="px-4 py-2 bg-black text-white rounded">Add Variant</button>
        </div>
        <div id="variantsContainer">
          <!-- Variants will be dynamically added here -->
        </div>

        <!-- Footer -->
        <div class="flex justify-end gap-4 pt-6 border-t border-slate-200 animate-fade-in" style="animation-delay: 300ms;">
          <button type="button" id="cancelBtn" class="px-6 py-3 border border-slate-300 text-slate-700 rounded-lg hover:bg-slate-50 transition-colors">Cancel</button>
          <button type="submit" class="px-8 py-3 bg-gradient-to-r from-slate-900 to-slate-700 text-white rounded-lg hover:from-slate-800 hover:to-slate-600 shadow-lg transition-all">Update Product</button>
        </div>
      </form>

      <!-- Cropper Modal -->
      <div id="cropperModal" class="fixed inset-0 bg-black bg-opacity-70 hidden flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-xl shadow-xl w-full max-w-4xl h-[70vh] flex flex-col">
          <div class="flex justify-between items-center p-4 border-b">
            <h2 class="text-xl font-semibold">Crop Image</h2>
          </div>
          <div class="flex-1 flex items-center justify-center overflow-auto bg-gray-50">
            <img id="cropperImage" class="max-w-full max-h-full object-contain" />
          </div>
          <div class="flex justify-end gap-3 p-4 border-t">
            <button id="cancelCrop" type="button" class="px-4 py-2 bg-gray-300 rounded">Cancel</button>
            <button id="confirmCrop" type="button" class="px-4 py-2 bg-blue-600 text-white rounded">Crop</button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
