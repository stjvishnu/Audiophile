<style>
  /* Hide scrollbar but allow scroll */
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
  .no-scrollbar {
    -ms-overflow-style: none;  /* IE and Edge */
    scrollbar-width: none;  /* Firefox */
     
  }

  @keyframes slideIn {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
  }

  
</style>

<div class="bg-[#0a0a0a] text-white font-sans min-h-screen ">

  <div class="flex flex-col ">

    <div class="flex-1 p-3 sm:p-4 md:p-6 lg:p-8 ">

      <div id="couponHeader" class="bg-black text-white rounded-lg p-3 sm:p-4 mb-6 flex flex-col gap-3 sm:gap-4 border border-white/40">
        <h1 class="text-xl sm:text-2xl font-bold">Coupons</h1>
        
        <div class="flex flex-col sm:flex-row gap-3 w-full">
          <!-- SEARCH INPUT -->
          <div class="relative flex-1 min-w-0">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                      d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
              </svg>
            </div>
        
            <input 
              type="search"
              id="searchInput"
              placeholder="Search coupons..."
              class="w-full pl-10 pr-4 py-2 bg-gray-800/50 rounded-lg border border-white/20 focus:outline-none transition duration-200"
            >
          </div>
        
          <!-- ACTION BUTTONS ROW -->
          <div class="flex flex-wrap sm:flex-nowrap gap-2 sm:gap-3">
            <a href="/admin/coupons" class="flex-1 sm:flex-none bg-gray-800/50 text-white px-3 sm:px-4 py-2 rounded-lg border border-white/20 cursor-pointer focus:outline-none hover:bg-black text-center whitespace-nowrap">
              Reset
            </a>
            
            <button id="addeditBtn" onclick="openModal('add')"
              class="flex-1 sm:flex-none bg-white text-black px-3 sm:px-4 py-2 rounded-lg font-semibold flex items-center gap-2 justify-center whitespace-nowrap"
            >
              <span class="text-xl">+</span>
              Add Coupon
            </button>
          </div>
        </div>
      </div>
  
      <!-- Desktop Table View -->
      <div class="hidden lg:block">
        <div class="bg-black rounded-xl border border-gray-800 overflow-x-auto text-white w-full">
          <table class="w-full border-collapse"> 

            <thead>
              <tr class="border-b border-gray-800 text-sm">
                <th class="px-3 py-4 text-left whitespace-nowrap">NO</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Code</th>
                <th class="px-4 py-4 text-left">Description</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Type</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Value</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Valid Period</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Usage</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Status</th>
                <th class="px-4 py-4 text-left whitespace-nowrap">Actions</th>
              </tr>
            </thead>

            <tbody id="couponsContainerDesktop" class="text-sm">

              <% if(coupons) {%>

                <% coupons.forEach((c,i)=>{ %>

               <tr  id="<%=c._id%>" class=" border-b <%= c.isDelete ?'bg-gray-600':'' %>  border-gray-800 hover:bg-[#191a19] transition"
                style="animation: slideIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; animation-delay:<%= i * 0.1 %>s; opacity:0;"

                >

                <td class="index px-3 py-5"><%=i+1%></td>

                <td class="code px-4 py-5 font-semibold"><%=c.code%></td>

                <td class="description px-4 py-5 text-gray-400 truncate max-w-xs"><%=c.description%></td>

                <td class="discountType px-4 py-5 capitalize">
                  <%=c.discountType%>
                </td>
                <td class="discountValue px-4 py-5">
                  <%=c.discountValue%>
                </td>

                <td class="date px-4 py-5 text-sm text-gray-400">
                  <%=new Date(c.validFrom).toLocaleDateString()%> -
                   <%=new Date(c.validTo).toLocaleDateString()%> 
                </td>

                <td class="usageLimit px-4 py-5 text-sm"><%=c.usageLimit%></td>

                <td class="px-4 py-5">
                  <span id="statusBtn-<%=c._id%>"  class="px-3 py-1 rounded-full text-xs font-medium 

                    <%= c.isDelete ? 'bg-red-900/50 text-red-300' : (c.isActive ? 'bg-green-900/50 text-green-300' : 'bg-red-900/50 text-red-300') %>">
                    
                    <%=c.isDelete ? 'Deleted' : (c.isActive ? 'Active' : 'Inactive')%>
                </span>
                </td>

                <td class="px-4 py-5 flex gap-2 items-center">
                  
                  <i class="fa-solid fa-pen cursor-pointer hover:text-gray-300 
                  <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%>"
                  style="color: #ffffff;" onclick="openModal( 'edit','<%=JSON.stringify(c)%>' )"></i>

                  <i id="blockBtn-<%=c._id%>" class="fa-solid fa-lock cursor-pointer hover:text-red-300
                  <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%>
                  <%=c.isActive ? '' : 'hidden'%>"
                  style="color: #cc2424;" onclick="blockCoupon('<%= c._id %>')"></i>


                  <i id="unblockBtn-<%=c._id%>" class="fa-solid fa-lock-open cursor-pointer hover:text-green-300
                  <%=c.isActive ? 'hidden':''%>"
                  style="color: #04a978;" onclick="unblockCoupon('<%= c._id %>')"></i>

                  <i id="deleteBtn-<%=c._id%>"  class="fa-solid fa-trash cursor-pointer hover:text-red-300 <%= c.isDelete ? 'hidden' : ''%>"
                    style="color: #ffffff;" onclick="deleteCoupon('<%= c._id %>')"></i>

                  <i id="restoreBtn-<%=c._id%>" class="fa-solid fa-trash-arrow-up cursor-pointer hover:text-red-400 <%= c.isDelete ? '' : 'hidden'%>"
                  style="color: #ff0000;" onclick="restoreCoupon('<%= c._id %>')"></i>

                </td>

              </tr>

               <% }) %>

              <% } %>

            </tbody>

          </table>
        </div>
      </div>

      <!-- Tablet View (md to lg) -->
      <div class="hidden md:block lg:hidden">
        <div class="bg-black rounded-xl border border-gray-800 overflow-x-auto text-white">
          <table class="w-full border-collapse min-w-[800px]">
            <thead>
              <tr class="border-b border-gray-800 text-sm">
                <th class="px-3 py-3 text-left">Code</th>
                <th class="px-3 py-3 text-left">Type/Value</th>
                <th class="px-3 py-3 text-left">Valid Period</th>
                <th class="px-3 py-3 text-left">Status</th>
                <th class="px-3 py-3 text-left">Actions</th>
              </tr>
            </thead>
            <tbody id="couponsContainerTablet" class="text-sm">
              <% if(coupons) {%>
                <% coupons.forEach((c,i)=>{ %>
                  <tr id="tablet-<%=c._id%>" class="border-b <%= c.isDelete ?'bg-gray-600':'' %> border-gray-800 hover:bg-[#191a19] transition"
                    style="animation: slideIn 0.6s cubic-bezier(0.16, 1, 0.3, 1) forwards; animation-delay:<%= i * 0.1 %>s; opacity:0;"
                    >
                    <td class="px-3 py-4">
                      <div class="font-semibold"><%=c.code%></div>
                      <div class="text-xs text-gray-400 mt-1 truncate max-w-[150px]"><%=c.description%></div>
                    </td>
                    <td class="px-3 py-4">
                      <div class="capitalize text-gray-400 text-xs"><%=c.discountType%></div>
                      <div class="font-medium"><%=c.discountValue%></div>
                    </td>
                    <td class="px-3 py-4 text-xs text-gray-400">
                      <div><%=new Date(c.validFrom).toLocaleDateString()%></div>
                      <div><%=new Date(c.validTo).toLocaleDateString()%></div>
                    </td>
                    <td class="px-3 py-4">
                      <span id="tablet-statusBtn-<%=c._id%>" class="px-2 py-1 rounded-full text-xs font-medium <%= c.isDelete ? 'bg-red-900/50 text-red-300' : (c.isActive ? 'bg-green-900/50 text-green-300' : 'bg-red-900/50 text-red-300') %>">
                        <%=c.isDelete ? 'Deleted' : (c.isActive ? 'Active' : 'Inactive')%>
                      </span>
                    </td>
                    <td class="px-3 py-4">
                      <div class="flex gap-2 items-center">
                        <i class="fa-solid fa-pen cursor-pointer hover:text-gray-300 <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%>" style="color: #ffffff;" onclick="openModal('edit','<%=JSON.stringify(c)%>')"></i>
                        <i id="tablet-blockBtn-<%=c._id%>" class="fa-solid fa-lock cursor-pointer hover:text-red-300 <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%> <%=c.isActive ? '' : 'hidden'%>" style="color: #cc2424;" onclick="blockCoupon('<%= c._id %>')"></i>
                        <i id="tablet-unblockBtn-<%=c._id%>" class="fa-solid fa-lock-open cursor-pointer hover:text-green-300 <%=c.isActive ? 'hidden':''%>" style="color: #04a978;" onclick="unblockCoupon('<%= c._id %>')"></i>
                        <i id="tablet-deleteBtn-<%=c._id%>" class="fa-solid fa-trash cursor-pointer hover:text-red-300 <%= c.isDelete ? 'hidden' : ''%>" style="color: #ffffff;" onclick="deleteCoupon('<%= c._id %>')"></i>
                        <i id="tablet-restoreBtn-<%=c._id%>" class="fa-solid fa-trash-arrow-up cursor-pointer hover:text-red-400 <%= c.isDelete ? '' : 'hidden'%>" style="color: #ff0000;" onclick="restoreCoupon('<%= c._id %>')"></i>
                      </div>
                    </td>
                  </tr>
                <% }) %>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>

      <!-- Mobile Card View -->
      <div id="couponsContainerMobile" class="md:hidden space-y-3">

        <% if(coupons) {%>
            <% coupons.forEach((c,i)=>{ %>
            
            <div class="bg-black border border-gray-700 rounded-xl p-3 sm:p-4 space-y-3" id="mobile-card-<%=c._id%>">

              <div class="flex justify-between items-center pb-2 border-b border-gray-800">
                <span class="text-xs font-semibold bg-gray-800 px-2 py-1 rounded text-gray-300"># <%=i+1%></span>
                <span class="text-xs text-gray-500">
                  <%=new Date(c.validFrom).toLocaleDateString()%> -
                  <%=new Date(c.validTo).toLocaleDateString()%> 
                </span>
              </div>

              <div class="text-lg sm:text-xl font-bold uppercase"><%=c.code%></div>

              <div class="text-sm space-y-2">
                 <p class="text-gray-300"><%=c.description %></p>

                <div class="flex justify-between items-center">
                  <p class="font-semibold">
                    <%=c.discountValue%> 
                    <% if(c.discountType === 'percentage') {%>
                      % off
                    <% } else { %>
                      ₹ off
                    <% } %>
                  </p>
                  <p class="text-gray-400 text-xs capitalize">(<%=c.discountType%>)</p>
                </div>
              </div>

              <div class="flex justify-between items-center pt-2">
                <p class="text-gray-400 text-xs sm:text-sm">Usage: <span class="text-white font-medium"><%=c.usageLimit%></span></p>

                <span class="px-2 sm:px-3 py-1 text-xs rounded-full font-medium 
                  <%= c.isActive ? 'bg-green-900/50 text-green-300' : 'bg-red-900/50 text-red-300' %>">
                  <%=c.isActive?'Active':'Inactive'%>
                </span>
              </div>
              
              <div class="flex gap-3 sm:gap-4 pt-3 border-t border-gray-800">
                <button onclick="openModal('edit','<%=JSON.stringify(c)%>')" 
                  class="text-base sm:text-lg text-white hover:text-gray-300 <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%>"
                  aria-label="Edit Coupon">
                  <i class="fa-solid fa-pen"></i>
                </button>
                
                <button onclick="blockCoupon('<%= c._id %>')" 
                  class="text-base sm:text-lg text-red-500 hover:text-red-300 <%=c.isDeleted ? 'opacity-50 pointer-events-none':''%> <%=c.isActive ? '' : 'hidden'%>"
                  id="mobile-blockBtn-<%=c._id%>" aria-label="Block Coupon">
                  <i class="fa-solid fa-lock"></i>
                </button>
                <button onclick="unblockCoupon('<%= c._id %>')" 
                  class="text-base sm:text-lg text-green-500 hover:text-green-300 <%=c.isActive ? 'hidden':''%>"
                  id="mobile-unblockBtn-<%=c._id%>" aria-label="Unblock Coupon">
                  <i class="fa-solid fa-lock-open"></i>
                </button>
                
                <button onclick="deleteCoupon('<%= c._id %>')" 
                  class="text-base sm:text-lg text-red-400 hover:text-red-200 <%= c.isDeleted ? 'hidden' : ''%>"
                  id="mobile-deleteBtn-<%=c._id%>" aria-label="Delete Coupon">
                  <i class="fa-solid fa-trash"></i>
                </button>
                <button onclick="restoreCoupon('<%= c._id %>')" 
                  class="text-base sm:text-lg text-red-600 hover:text-red-400 <%= c.isDeleted ? '' : 'hidden'%>"
                  id="mobile-restoreBtn-<%=c._id%>" aria-label="Restore Coupon">
                  <i class="fa-solid fa-trash-arrow-up"></i>
                </button>
              </div>

            </div>
            <% }) %>
        <% } %>

      </div>

      <!-- Modal -->
      <div id="couponModal" class="hidden fixed inset-0 bg-black/80 flex items-center justify-center z-50 p-3 sm:p-4"> 
        <div class="bg-white rounded-2xl sm:rounded-[2rem] mt-0 border border-gray-50 p-4 sm:p-6 md:p-8 w-full max-w-lg lg:max-w-2xl max-h-[95vh] overflow-y-auto no-scrollbar scroll-smooth text-black">

          <div class="flex justify-between items-center mb-4 sm:mb-6">
            <h2 id="couponTitle" class="text-lg sm:text-xl md:text-2xl font-bold">Add New Coupon</h2>
            <button onclick="closeModal()" class="text-gray-400 hover:text-black text-2xl sm:text-3xl leading-none">&times;</button>
          </div>
    
          <form id="couponForm" class="space-y-3 sm:space-y-4">
    
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Coupon Code *</label>
                <input id="couponCode"
                  type="text"
                  placeholder="e.g., SAVE20"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 uppercase focus:bg-white text-sm sm:text-base"
                >
                <div id="couponCode-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
    
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Discount Type *</label>
                <select id="discountType"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                  <option value="" >Select discount type</option>
                  <option value="percentage">Percentage (%)</option>
                  <option value="fixed">Fixed Amount (₹)</option>
                </select>
                <div id="discountType-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
            </div>
    
            <div>
              <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Description *</label>
              <textarea id="description"
                rows="2"
                placeholder="Brief description of the coupon"
                class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
              ></textarea>
              <div id="description-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
            </div>
    
            <div class="grid grid-cols-1 sm:grid-cols-3 gap-3 sm:gap-4">
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Discount Value *</label>
                <input id="discountValue"
                  type="number"
                  placeholder="0"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="discountValue-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
    
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Min Purchase (₹)</label>
                <input id="minPurchase"
                  type="number"
                  placeholder="0"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="minPurchase-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
    
              <div id="maxDiscountContainer">
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Max Discount (₹)</label>
                <input id="maxDiscount"
                  type="number"
                  placeholder="No limit"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="maxDiscount-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
            </div>
    
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Valid From *</label>
                <input id="validFrom"
                  type="text" placeholder="DD/MM/YYYY"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="validFrom-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
    
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Valid To *</label>
                <input id="validTo"
                  type="text" placeholder="DD/MM/YYYY"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="validTo-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
            </div>
    
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-3 sm:gap-4">
              <div>
                <label class="block text-xs sm:text-sm font-semibold mb-1 sm:mb-2">Per User Limit</label>
                <input id="perUserLimit"
                  type="number"
                  placeholder="0 = Unlimited"
                  class="w-full bg-gray-200 border border-gray-700 rounded-lg px-3 sm:px-4 py-2 focus:bg-white text-sm sm:text-base"
                >
                <div id="perUserLimit-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                <p class="text-xs text-gray-500 mt-1">0 means unlimited usage</p>
              </div>
    
              <div class="flex items-start sm:items-center pt-2 sm:pt-6"> 
                <label class="flex items-center gap-2 sm:gap-3 cursor-pointer">
                  <input type="checkbox" checked class="w-4 h-4 sm:w-5 sm:h-5 bg-gray-200 border-gray-700 text-black">
                  <span class="font-semibold text-sm sm:text-base">Active Status</span>
                </label>
              </div>
            </div>
    
            <div class="flex flex-col-reverse sm:flex-row gap-3 sm:gap-4 pt-3 sm:pt-4"> 
              <button type="button" onclick="closeModal()" id="cp-cancelBtn" class="px-4 sm:px-6 py-2 sm:py-3 bg-white text-black border border-gray-400 rounded-xl sm:rounded-2xl font-semibold text-sm sm:text-base">
                Cancel
              </button>
              <button id="saveBtn" type="submit" class="flex-1 bg-black text-white px-4 sm:px-6 py-2 sm:py-3 rounded-xl sm:rounded-2xl font-semibold order-first sm:order-last text-sm sm:text-base">
                Save Coupon
              </button>
            </div>
    
          </form>
        </div>
      </div>
      <%-include ('./partials/pagination.ejs')%>
    </div>

  </div>

</div>

<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script src="/js/admin/couponScript.js"></script>
<script src="/js/admin/couponValidation.js"></script>