<div id="addressPage" class="h-full rounded-[1.8rem] overflow-y-auto p-12 hidden">
  <div class="max-w-5xl mx-auto">
      <div class="flex items-center justify-between mb-8">
          <h1 class="text-3xl font-bold text-gray-900">Delivery Addresses</h1>
      </div>

      <div id="address-list" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <button id="addAddressBtn" 
                  class="border-2 border-dashed border-gray-300 rounded-2xl p-8 flex flex-col items-center justify-center min-h-[280px] hover:border-black hover:bg-gray-50 transition-all group">
              <div class="w-16 h-16 rounded-full bg-gray-100 flex items-center justify-center mb-4 group-hover:bg-black transition-colors">
                  <svg class="w-8 h-8 text-gray-400 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
                  </svg>
              </div>
              <p class="text-gray-600 font-medium group-hover:text-black transition-colors">Add New Address</p>
          </button>

        <% if(addresses && addresses.length>0){%>
        
        <% addresses.forEach((address)=>{ %>
                   <!-- Static Address 1 -->
      <div id='address-<%=address._id%>' class="addressCard border-2 <%=address.isDefault?'border-black':'border-gray-200'%>  rounded-2xl p-6 min-h-[280px] hover:border-black transition-all cursor-pointer relative group">
      <div class="flex items-start justify-between mb-4">
        <div class="flex-1">
          <h3 class="name font-bold text-lg text-gray-900 mb-1"><%=address.name%></h3>
          <p class="mobile text-sm text-gray-600"><%=address.mobile%></p>
        </div>
        <button onclick="openAddressModal('<%= address._id %>')"
          class="text-gray-400 hover:text-black transition-colors">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z" />
          </svg>
        </button>
      </div>

      <div class="space-y-2 text-sm text-gray-700">
        <p class="houseName"><%=address.houseName%></p>
        <p class="streetName"><%=address.streetName%></p>
        <p class="locality"><%=address.locality%></p>
        <p class="landmark text-gray-500"><%=address.landmark%></p>
        <p class="zip font-medium"><%=address.city%>, <%=address.state%> - <%=address.pincode%></p>
      </div>

      <button id="defaultAddressBtn" onclick="setDefaultAddress('<%= address._id %>')" data-address-id="<%= address._id %>"
        class="absolute bottom-6 left-6 text-gray-400 hover:text-red-600 transition-colors opacity-0 group-hover:opacity-100">
        <i class="fa-solid fa-thumbtack " style="color:<%=address.isDefault? '#000000':'#caccce'%>"
        ></i>
        

      </button>

      <button id="deleteAddressBtn" onclick="deleteAddress('<%=address._id%>')" data-address-id="<%=address._id%>"
        class="absolute bottom-6 right-6 text-gray-400 hover:text-red-600 transition-colors opacity-0 group-hover:opacity-100">
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
            d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
      </button>
    </div>

       
    <% }) %>
    <% } %>

   
          
  
      </div>
  </div>
</div>

<script src="/js/user/address-validation.js"></script>
