<!-- Premium New Arrivals Section -->
<section class="py-20 bg-transparent">
  <!-- Section Header -->
  <div class="container mx-auto px-6 mb-16 text-center">
    <span class="inline-block px-4 py-1 text-xs font-medium tracking-widest text-gray-900 bg-gray-100 rounded-full mb-4 ">NEW ARRIVALS</span>
    <h2 class="text-4xl font-bold text-gray-600">Experience The Latest <span class="text-black">Audio Innovation</span></h2>
  </div>

  <!-- Product Cards Grid -->
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 max-w-7xl">
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-10">
      <!-- Card 1 -->
     <% if(newProducts && newProducts.length>0){ %>
       <% newProducts.forEach((product,index)=>{ %>
        <div
        class="group relative h-[380px] sm:h-[400px] lg:h-[420px] w-full overflow-hidden rounded-[2.2rem] sm:rounded-[2.2rem] bg-gradient-to-br from-gray-50 to-gray-100 shadow-sm hover:shadow-lg  transition-all duration-300"
        >
        <div class="absolute top-4 sm:top-6 right-4 sm:right-6 z-10 flex gap-2">
          <button id="wishlistBtn" class="transition-all duration-200" onclick="handleWishlist('<%=product._id%>','<%= product.variants[0].sku %>',this)">
            <i class="fa-solid fa-lg fa-heart" style='color: <%= product.isWishlisted? "#000000" : "#a3a5a8"  %>; '></i>
          </button>
        </div>
        <div class="absolute inset-0 flex items-center justify-center p-6 sm:p-10 mix-blend-multiply ">
          <img src="<%= product.variants[0].attributes.productImages[0] %>" alt="<%= product.name %>"
            class="h-56 w-56 sm:h-72 sm:w-72 object-contain transition-all duration-300 group-hover:scale-105 group-hover:rotate-1">
        </div>
        <!-- <div
        class="absolute inset-0 bg-black/0 group-hover:bg-gray-500/10 group-hover:backdrop-blur-[0.5px]
        transition-colors duration-300 z-0">
       </div> -->

        <div class="absolute bottom-0 left-0 right-0 p-4 sm:p-6 lg:p-8 bg-gradient-to-t from-black/30 to-transparent text-white">
          <div class="transform translate-y-12 sm:translate-y-16 group-hover:translate-y-0 transition-transform duration-300">
            <span class="text-xs sm:text-sm font-bold tracking-widest opacity-90">
              <%= product.brand %>
            </span>
            <h3 class="text-lg sm:text-xl lg:text-2xl font-extrabold mt-1 line-clamp-2">
              <%= product.name %>
            </h3>
            <div class="mt-2 sm:mt-3 flex items-center gap-2 flex-wrap">
              <span class="text-base sm:text-lg text-black font-bold">
                <%= Math.round(product.variants[0].attributes.price * 0.01 * (100-product.variants[0].attributes.discount)) %> â‚¹
              </span>
              <span class="text-xs sm:text-sm line-through opacity-70">
                <%= product.variants[0].attributes.price %>
              </span>
              <span class="ml-1 sm:ml-2 px-2 py-0.5 bg-black text-xs font-bold rounded-full">
                <%= product.variants[0].discount %> %
              </span>
            </div>
          </div>
          <div
            class="mt-2 sm:mt-3 max-h-0 opacity-0 group-hover:max-h-20 group-hover:opacity-100 transition-all duration-300 ease-in-out overflow-hidden">
            <p class="text-xs sm:text-sm font-semibold  line-clamp-2 text-white"> <%= product.description1 %> </p>
          </div>
          <div
            class="mt-3 sm:mt-4 opacity-0 group-hover:opacity-100 transition-opacity duration-300 delay-100 flex flex-col sm:flex-row justify-between items-start sm:items-center gap-2 sm:gap-0">
            <button class="flex items-center text-xs sm:text-sm font-medium tracking-wider">
              <a href="/user/products/productPage/<%=product._id%>">EXPLORE DETAILS</a>
              <svg class="w-3 h-3 sm:w-4 sm:h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3">
                </path>
              </svg>
            </button>
            <button data-product-id="<%=product._id %>" data-variant-id="<%=product.variants[0].sku%>"
              class="addToCartBtn flex items-center gap-1 px-3 sm:px-4 py-1.5 sm:py-2 bg-white/20 hover:bg-white/30 backdrop-blur-sm rounded-full text-xs sm:text-sm font-medium transition-all duration-200 border border-white/20 hover:border-white/40">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3 sm:h-4 sm:w-4" fill="none" viewBox="0 0 24 24"
                stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                  d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z" />
              </svg>
              <span class="hidden sm:inline">ADD TO CART</span>
              <span class="sm:hidden">ADD</span>
            </button>
          </div>
        </div>
      </div>
        <%}) %>
     <% } %>
      

      

     
    </div>
  </div>
</section>