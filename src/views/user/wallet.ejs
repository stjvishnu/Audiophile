<script>
  document.querySelectorAll('.filter-tab').forEach(tab => {
    tab.addEventListener('click', function () {
      document.querySelectorAll('.filter-tab').forEach(t => {
        t.classList.remove('active', 'bg-black', 'text-white');
        t.classList.add('text-gray-600', 'bg-gray-100');
      });

      this.classList.add('active', 'bg-black', 'text-white');
      this.classList.remove('text-gray-600', 'bg-gray-100');

      const filter = this.dataset.filter;
      document.querySelectorAll('.transaction-card').forEach(card => {
        card.style.display = (filter === 'all' || card.dataset.type === filter) ? 'block' : 'none';
      });
    });
  });

  function openAddMoneyModal() {
    alert("Add money clicked (static)");
  }
</script>
