<script>
  // Sidebar toggle functionality
  const filterToggle = document.getElementById('filterToggle');
  const filterSidebar = document.getElementById('filterSidebar');
  const closeSidebar = document.getElementById('closeSidebar');
  const productsGrid = document.getElementById('productsGrid');
  let sidebarOpen = false;

  function toggleSidebar() {
    sidebarOpen = !sidebarOpen;

    if (sidebarOpen) {
      // Open sidebar
      filterSidebar.classList.remove('hidden-sidebar');
      // Change grid to 2 columns when sidebar is open
      productsGrid.classList.remove('lg:grid-cols-3');
      productsGrid.classList.add('lg:grid-cols-2');
    } else {
      // Close sidebar
      filterSidebar.classList.add('hidden-sidebar');
      // Change grid back to 3 columns when sidebar is closed
      productsGrid.classList.remove('lg:grid-cols-2');
      productsGrid.classList.add('lg:grid-cols-3');
    }
  }

  filterToggle.addEventListener('click', toggleSidebar);
  closeSidebar.addEventListener('click', toggleSidebar);

  // Close sidebar on ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && sidebarOpen) {
      toggleSidebar();
    }
  });

  // Sort dropdown toggle
  const sortToggle = document.getElementById('sortToggle');
  const sortDropdown = document.getElementById('sortDropdown');
  const sortArrow = document.getElementById('sortArrow');

  sortToggle.addEventListener('click', (e) => {
    e.stopPropagation();
    sortDropdown.classList.toggle('hidden');
    sortArrow.classList.toggle('rotate-180');
  });

  document.addEventListener('click', (e) => {
    if (!sortToggle.contains(e.target) && !sortDropdown.contains(e.target)) {
      sortDropdown.classList.add('hidden');
      sortArrow.classList.remove('rotate-180');
    }
  });

  // Price range sliders sync
  const priceMin = document.getElementById('priceMin');
  const priceMax = document.getElementById('priceMax');
  const priceMinInput = document.getElementById('priceMinInput');
  const priceMaxInput = document.getElementById('priceMaxInput');

  if (priceMin && priceMinInput) {
    priceMin.addEventListener('input', (e) => {
      priceMinInput.value = e.target.value;
    });
  }

  if (priceMax && priceMaxInput) {
    priceMax.addEventListener('input', (e) => {
      priceMaxInput.value = e.target.value;
    });
  }
</script>

