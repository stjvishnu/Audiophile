// }

document.addEventListener('keydown', function(e) {
  if (e.key === 'Escape') {
    closeAddressModal();
  }
});
</script>
<script>
  async function decrementItem(btn) {
    const li = btn.closest('li');
    const qtyInput = li.querySelector('.qtyInput');
    const priceEl = li.querySelector('.item-price');
  
    const productId = btn.dataset.productId;
    const variantId = btn.dataset.variantId;
    const productColor = btn.dataset.productColor;
  
    try {
      const res = await axios.post('/user/cart/update-quantity', {
        productId,
        variantId,
        variantColor: productColor,
        type: 'decrement'
      });
  
      qtyInput.value = res.data.updatedItem.quantity;
      priceEl.textContent = `₹${res.data.updatedItem.totalPrice}`;
  
      updateSubTotal();
    } catch (err) {
      console.log(err);
    }
  }
  
  async function incrementItem(btn) {
    const li = btn.closest('li');
    const qtyInput = li.querySelector('.qtyInput');
    const priceEl = li.querySelector('.item-price');
  
    const productId = btn.dataset.productId;
    const variantId = btn.dataset.variantId;
    const productColor = btn.dataset.productColor;
  
    try {
      const res = await axios.post('/user/cart/update-quantity', {
        productId,
        variantId,
        variantColor: productColor,
        type: 'increment'
      });
  
      qtyInput.value = res.data.updatedItem.quantity;
      priceEl.textContent = `₹${res.data.updatedItem.totalPrice}`;
  
      updateSubTotal();
    } catch (err) {
      console.log(err);
    }
  }
  
  async function removeItem(btn) {
    const li = btn.closest('li');
    const variantId = btn.dataset.variantId;
  
    try {
      await axios.delete(`/user/cart/${variantId}`);
      li.remove();
      updateSubTotal();
    } catch (err) {
      console.log(err);
    }
  }
  
  async function updateSubTotal() {
    const res = await axios.get('/user/cart');
    let total = 0;
    console.log(res.data.cart.items);
    res.data.cart.items.forEach(item => total += item.totalPrice);
    console.log(total);
    console.log(document.getElementById('subTotal'))
    document.getElementById('subTotal').textContent = `₹ ${total}`;
    document.getElementById('total').textContent = `₹ ${total}`;
  }
  </script>
  
<script src="/js/user/checkout-script.js"></script>

