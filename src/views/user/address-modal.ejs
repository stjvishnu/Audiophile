<style>
    /* Hide scrollbar but allow scroll */
    .no-scrollbar::-webkit-scrollbar {
      display: none;
    }
    .no-scrollbar {
      -ms-overflow-style: none;  /* IE and Edge */
      scrollbar-width: none;  /* Firefox */
    }
  </style>


<div id="addressModal" class="hidden fixed  inset-0 top-12 bg-black bg-opacity-50 flex items-center justify-center z-50 ">
  <div class="bg-white rounded-[2rem] w-full max-w-3xl shadow-2xl  max-h-[90vh] flex flex-col  overflow-y-auto no-scrollbar scroll-smooth mt-6 mx-4">
      <div class="flex items-center justify-between p-8 border-b border-gray-200">
          <h2 id="modalTitle" class="text-2xl font-bold text-gray-900">Add New Address</h2>
          <button onclick="closeAddressModal()" class="text-gray-400 hover:text-gray-600 transition-colors">
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
          </button>
      </div>

      <form id="addressForm" class="p-8 ">
          <input type="hidden" id="addressId"  name="id">

          <div class="space-y-6">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                      <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                          Full Name <span class="text-red-500">*</span>
                      </label>
                      <input type="text"
                             id="name"
                             name="name"
                             class="w-full px-4 text-black py-3 rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="name-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>

                  <div>
                      <label for="mobile" class="block text-sm font-medium text-gray-700 mb-2">
                          Mobile Number <span class="text-red-500">*</span>
                      </label>
                      <input type="tel"
                             id="mobile"
                             name="mobile"
                             pattern="[0-9]{10}"
                             class="w-full px-4 text-black py-3 rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="mobile-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                      <label for="pincode" class="block text-sm font-medium text-gray-700 mb-2">
                          Pincode <span class="text-red-500">*</span>
                      </label>
                      <input type="text"
                             id="pincode"
                             name="pincode"
                             pattern="[0-9]{6}"
                             class="w-full px-4 text-black py-3 rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="pincode-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>

                  <div>
                      <label for="locality" class="block text-sm font-medium text-gray-700 mb-2">
                          Locality <span class="text-red-500">*</span>
                      </label>
                      <input type="text"
                             id="locality"
                             name="locality"
                             class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="locality-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>
              </div>

              <div>
                  <label for="streetName" class="block text-sm font-medium text-gray-700 mb-2">
                      Street Name <span class="text-red-500">*</span>
                  </label>
                  <input type="text"
                         id="streetName"
                         name="streetName"
                         class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                         >
                  <div id="streetName-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>

              <div>
                  <label for="houseName" class="block text-sm font-medium text-gray-700 mb-2">
                      House/Flat/Building Name <span class="text-red-500">*</span>
                  </label>
                  <input type="text"
                         id="houseName"
                         name="houseName"
                         class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                         >
                  <div id="houseName-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>

              <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                  <div>
                      <label for="city" class="block text-sm font-medium text-gray-700 mb-2">
                          City <span class="text-red-500">*</span>
                      </label>
                      <input type="text"
                             id="city"
                             name="city"
                             class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="city-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>

                  <div>
                      <label for="state" class="block text-sm font-medium text-gray-700 mb-2">
                          State <span class="text-red-500">*</span>
                      </label>
                      <input type="text"
                             id="state"
                             name="state"
                             class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all"
                             >
                      <div id="state-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                  </div>
              </div>

              <div>
                  <label for="landmark" class="block text-sm font-medium text-gray-700 mb-2">
                      Landmark (Optional)
                  </label>
                  <input type="text"
                         id="landmark"
                         name="landmark"
                         class="w-full px-4 py-3 text-black rounded-lg border border-gray-300  focus:ring-black focus:border-transparent transition-all">
                  <div id="landmark-error" class="top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
              </div>
          </div>

          <div class="flex gap-4 mt-8 pt-6 border-t border-gray-200">
              <button type="button" onclick="closeAddressModal()"
                      class="flex-1 px-6 py-3  border border-gray-300 rounded-lg text-gray-700 font-medium hover:bg-gray-50 transition-colors">
                  Cancel
              </button>
              <button id="formSubmitBtn"  type="submit"
                      class="flex-1 px-6 py-3 bg-black text-white rounded-lg font-medium hover:bg-gray-800 transition-colors">
                  Save Address
              </button>
          </div>
      </form>
  </div>
</div>

<script></script>
