<div id="orderDetailsSection" class="animate-fade-in p-12 rounded-[1.8rem] h-full overflow-y-auto no-scrollbar hidden">
  <div class="max-w-5xl mx-auto">
  <h1 class="text-4xl font-bold text-gray-900 mb-8">Order Details</h1>

  <!-- ORDER ITEMS LIST -->
  <div class="orderDetails space-y-6 mb-8">

      
     

  <!-- ORDER META, SHIPPING, PAYMENT & SUMMARY -->
  <div class="bg-white border-2 border-black rounded-3xl p-12 text-black">


     

