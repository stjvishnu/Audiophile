<% const title = "SignUp" %>

<style>
    @keyframes pulse {
        0%, 100% { opacity: 1; }
        50% { opacity: 0.8; }
    }
    .animate-pulse-slow {
        animation: pulse 3s cubic-bezier(0.4, 0, 0.6, 1) infinite;
    }
    @keyframes float {
        0%, 100% { transform: translateY(0px) rotate(0deg); }
        50% { transform: translateY(-20px) rotate(5deg); }
    }
    @keyframes gradient {
        0% { background-position: 0% 50%; }
        50% { background-position: 100% 50%; }
        100% { background-position: 0% 50%; }
    }
    .animate-float {
        animation: float 6s ease-in-out infinite;
    }
    .animate-gradient {
        animation: gradient 15s ease infinite;
        background-size: 400% 400%;
    }

    .hover-scale {
      transition: all 0.6s cubic-bezier(0.34, 1.56, 0.64, 1);
    }
    
    .hover-scale:hover {
      transform: scale(1.03);
    }
</style>

<div class="min-h-screen bg-white flex items-center justify-center p-4 sm:p-6 md:p-8 antialiased">
    <div class="flex flex-col md:flex-row bg-white shadow-[0_12px_20px_rgba(0,0,0,0.25)] rounded-3xl border border-gray-100 overflow-hidden md:min-h-[550px] w-full max-w-4xl transition-all duration-300 hover-scale">
        
        <!-- Left Side - Logo (Hidden on mobile) -->
        <div class="hidden md:flex md:w-2/4 bg-gradient-to-br from-black to-gray-900 items-center justify-center p-12 relative overflow-hidden">
            <div class="absolute inset-0">
                <div class="absolute inset-0 opacity-20 bg-[radial-gradient(circle_at_30%_50%,rgba(255,255,255,0.2),transparent)]"></div>
                <div class="absolute inset-0 opacity-30 bg-[conic-gradient(from_90deg_at_50%_50%,rgba(255,255,255,0.1),transparent)]"></div>
            </div>
            <img 
                src="/images/white-logo.svg"
                alt="Audiophile Logo" 
                class="w-50 h-50 object-contain relative z-10 animate-float transition-all duration-700 hover:scale-110 hover:brightness-110"
            >
        </div>

        <!-- Right Side - Registration Form -->
        <div class="w-full md:w-2/4 flex items-center justify-center p-8 md:p-12">
            <div class="w-full max-w-md space-y-6">
                <div class="text-center space-y-2">
                    <h2 class="text-3xl font-bold tracking-tight text-gray-900">Create Your Account</h2>
                    <p class="text-gray-500 text-sm font-medium">Join our community of audiophiles</p>
                </div>

                <form id="form" action="/user/SignUp" method="post" class="mt-8 space-y-6">
                    <!-- First Name -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="firstName" 
                                name="firstName" 
                                type="text" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="First Name"
                            >
                            <div id="firstName-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>
                    
                    <!-- Last Name -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="lastName" 
                                name="lastName" 
                                type="text" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="Last Name"
                            >
                            <div id="lastName-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>

                    <!-- Email -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="email" 
                                name="email" 
                                type="email" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="Email"
                            >
                            <div id="email-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>

                    <!-- Phone Number -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="mobile" 
                                name="mobile" 
                                type="tel" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="Mobile Number"
                            >
                            <div id="mobile-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>

                    <!-- Password -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="password" 
                                name="password" 
                                type="password" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="Password"
                            >
                            <div id="password-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>

                    <!-- Confirm Password -->
                    <div class="space-y-2">
                        <div class="relative group">
                            <input 
                                id="confirmPassword" 
                                name="confirmPassword" 
                                type="password" 
                                class="w-full px-4 py-3 bg-gray-50 border border-gray-200 rounded-xl text-gray-900 transition-all duration-200 
                                       focus:bg-white focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 focus:outline-none
                                       group-hover:border-gray-300" 
                                placeholder="Confirm Password"
                            >
                            <div id="confirmPassword-error" class="absolute top-full left-0 text-red-500 text-xs mt-0.5 h-4 invisible"></div>
                        </div>
                    </div>

                    <!-- Sign Up Button -->
                    <div class="pt-2">
                        <button 
                            id="submitBtn" 
                            type="submit" 
                            class="w-full py-3 px-4 bg-black text-white rounded-xl font-medium
                                   transform transition-all duration-200
                                   hover:bg-gray-900 hover:shadow-lg hover:-translate-y-0.5
                                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-900
                                   active:translate-y-0"
                        >
                            Create Account
                        </button>
                    </div>

                    <!-- Sign In Link and Google Sign Up -->
                    <div class="space-y-4">
                        <p class="text-center text-sm text-gray-500">
                            Already have an account?
                            <a href="/user/login" class="font-medium text-gray-500 hover:text-gray-900 transition-colors duration-200 ml-1">
                                Sign in
                            </a>
                        </p>

                        <div class="relative my-6">
                            <div class="absolute inset-0 flex items-center">
                                <div class="w-full border-t border-gray-200"></div>
                            </div>
                            <div class="relative flex justify-center text-xs uppercase">
                                <span class="px-2 bg-white text-gray-500">Or sign up with</span>
                            </div>
                        </div>

                        <a 
                            class="w-full flex items-center justify-center px-4 rounded-xl
                                   transform transition-all duration-200
                                   hover:bg-white hover:-translate-y-0.5
                                   focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-200
                                   active:translate-y-0"
                            onclick="window.location.href='/user/auth/google'"
                        >
                            <img 
                                src="https://www.gstatic.com/firebasejs/ui/2.0.0/images/auth/google.svg" 
                                alt="Sign up with Google" 
                                class="w-6 h-6 filter grayscale hover:grayscale-0 transition-all duration-200"
                            >
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/js/signup-validation.js"></script>