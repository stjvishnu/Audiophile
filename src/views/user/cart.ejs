
<div id="cartModal" class="hidden z-40 rounded-xl">
  <div id="drawer" aria-labelledby="drawer-title" class="fixed inset-0   size-auto max-h-none max-w-none overflow-hidden bg-transparent not-open:hidden backdrop:bg-transparent ">
    <div  class="absolute inset-0 bg-gray-500/75 transition-opacity duration-500  ease-in-out data-closed:opacity-0"></div>
    <div id="cartOverlay" tabindex="0" class="absolute inset-0 pl-10 focus:outline-none sm:pl-16">
      <div  class="ml-auto block size-full max-w-md  transform transition duration-500 ease-in-out data-closed:translate-x-full sm:duration-700">
        <div id="cartPanel"  class="flex h-full flex-col  overflow-y-auto bg-white rounded-l-3xl shadow-xl ">
          <div  class="flex-1 overflow-y-auto px-4 py-6 sm:px-6">
            <div   class="flex items-start justify-between">
              <h2 id="drawer-title" class="text-lg font-medium text-gray-900">Shopping cart</h2>
              <div class="ml-3 flex h-7 items-center">
                <button id="cancelBtn" type="button"  class="relative -m-2 p-2 text-gray-400 hover:text-gray-500">
                  <span class="absolute -inset-0.5"></span>
                  <span class="sr-only">Close panel</span>
                  <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" data-slot="icon" aria-hidden="true" class="size-6">
                    <path d="M6 18 18 6M6 6l12 12" stroke-linecap="round" stroke-linejoin="round" />
                  </svg>
                </button>
              </div>
            </div>

            <div class="mt-8">
              <div id="productContainer"  class="flow-root">
                <ul role="list" class="-my-6 divide-y divide-gray-200">
    
                </ul>
              </div>
            </div>
          </div>

          <div class="border-t border-gray-200 px-4 py-6 sm:px-6">
            <div class="space-y-0.5 sm:space-y-1">
              <!-- Subtotal Row -->
              <div class="flex justify-between items-center text-base sm:text-md font-medium text-gray-900">
                <p>Subtotal</p>
                <p id="subTotal" class="font-semibold"></p>
              </div>
              
              <!-- Discount Row -->
              <div class="flex justify-between items-center text-base sm:text-md font-medium text-gray-900">
                <p>Discount</p>
                <p id="discount" class="font-semibold text-green-600"></p>
              </div>
              
              <!-- Divider -->
              <div class="border-t border-gray-200 pt-3 sm:pt-4"></div>
              
              <!-- Total Row -->
              <div class="flex justify-between items-center text-sm sm:text-lg font-bold text-gray-900">
                <p>Total</p>
                <p id="total" class="text-md sm:text-lg"></p>
              </div>
              
              <!-- Tax Notice -->
              <p class="text-xs sm:text-sm text-gray-500 text-center sm:text-left">
                Shipping and taxes calculated at checkout.
              </p>
            </div>
       
            <div class="mt-6">
              <a href="/user/checkout" class="flex items-center justify-center rounded-md border border-transparent bg-gray-800 px-6 py-3 text-base font-medium text-white shadow-xs hover:bg-black">Checkout</a>
            </div>
            <div class="mt-6 flex justify-center text-center text-sm text-gray-500">
              <p>
                or
                <button type="button" class="font-medium text-indigo-600 hover:text-indigo-500">
                 <a href="/user/products">Continue Shopping</a> 
                  <span aria-hidden="true"> &rarr;</span>
                </button>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>


