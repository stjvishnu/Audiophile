// ============================================
// RESPONSIVE IMAGE ZOOM (Works on ALL devices)
// ============================================
class ResponsiveProductZoom {
    constructor(imageId) {
        this.image = document.getElementById(imageId);
        if (!this.image) return;
        
        this.container = this.image.parentElement;
        this.isZooming = false;
        this.isMobile = window.innerWidth < 768 || window.innerWidth< 1180 ;

        
        this.init();
    }
    
    init() {
        this.createZoomContainer();
        
        if (this.isMobile) {
            // Mobile: Tap to toggle zoom overlay
            this.image.addEventListener('click', (e) => this.toggleMobileZoom(e));
        } else {
            // Desktop: Hover zoom
            this.image.addEventListener('mouseenter', () => this.startZoom());
            this.image.addEventListener('mousemove', (e) => this.updateZoom(e));
            this.image.addEventListener('mouseleave', () => this.stopZoom());
        }
        
        this.image.style.cursor = 'zoom-in';
    }
    
    createZoomContainer() {
        // Remove existing zoom container if any
        const existing = document.querySelector('.responsive-zoom-result');
        if (existing) existing.remove();
        
        // Create zoom container
        this.zoomResult = document.createElement('div');
        this.zoomResult.className = 'responsive-zoom-result';
        
        if (this.isMobile) {
            // Mobile: Full screen overlay
            this.zoomResult.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100vw;
                height: 100vh;
                background-color: rgba(0, 0, 0, 0.95);
                background-repeat: no-repeat;
                background-position: center;
                background-size: contain;
                display: none;
                z-index: 9999;
                cursor: zoom-out;
            `;
            
            // Add close button for mobile
            const closeBtn = document.createElement('button');
            closeBtn.innerHTML = '✕';
            closeBtn.style.cssText = `
                position: absolute;
                top: 20px;
                right: 20px;
                width: 40px;
                height: 40px;
                background: black;
                border: none;
                border-radius: 50%;
                font-size: 24px;
                cursor: pointer;
                z-index: 10000;
                display: flex;
                align-items: center;
                justify-content: center;
            `;
            closeBtn.onclick = () => this.stopZoom();
            this.zoomResult.appendChild(closeBtn);
            
            document.body.appendChild(this.zoomResult);
        } else {
            // Desktop: Side panel
            this.zoomResult.style.cssText = `
                position: absolute;
                top: 0;
                left: calc(100% + 20px);
                width: 500px;
                height: 500px;
                border: 2px solid #e5e7eb;
                border-radius: 3rem;
                background-color: white;
                background-repeat: no-repeat;
                background-size: 0;
                display: none;
                z-index: 100;
                pointer-events: none;
                box-shadow: 0 10px 40px rgba(0,0,0,0.2);
            `;
            
            this.container.style.position = 'relative';
            this.container.appendChild(this.zoomResult);
        }
    }
    
    toggleMobileZoom(e) {
        if (this.isZooming) {
            this.stopZoom();
        } else {
            this.startMobileZoom(e);
        }
    }
    
    startMobileZoom(e) {
        this.isZooming = true;
        this.zoomResult.style.display = 'flex';
        this.zoomResult.style.backgroundImage = `url('${this.image.src}')`;
        
        // Prevent body scroll
        document.body.style.overflow = 'hidden';
        
        // Add touch move for panning
        this.zoomResult.addEventListener('touchmove', (e) => this.panMobileZoom(e));
    }
    
    panMobileZoom(e) {
        e.preventDefault();
        const touch = e.touches[0];
        const rect = this.zoomResult.getBoundingClientRect();
        const x = touch.clientX - rect.left;
        const y = touch.clientY - rect.top;
        
        const xPercent = (x / rect.width) * 100;
        const yPercent = (y / rect.height) * 100;
        
        this.zoomResult.style.backgroundPosition = `${xPercent}% ${yPercent}%`;
    }
    
    startZoom() {
        this.isZooming = true;
        this.zoomResult.style.display = 'block';
        
        this.zoomResult.style.backgroundImage = `url('${this.image.src}')`;
        
        const zoomWidth = this.zoomResult.offsetWidth;
        const zoomHeight = this.zoomResult.offsetHeight;
        const imgWidth = this.image.offsetWidth;
        const imgHeight = this.image.offsetHeight;
        
        this.zoomX = zoomWidth / imgWidth;
        this.zoomY = zoomHeight / imgHeight;
        
        this.zoomResult.style.backgroundSize = `${imgWidth * this.zoomX * 2.5}px ${imgHeight * this.zoomY * 2.5}px`;
    }
    
    updateZoom(e) {
        if (!this.isZooming) return;
        
        const rect = this.image.getBoundingClientRect();
        const x = e.clientX - rect.left;
        const y = e.clientY - rect.top;
        
        const xPercent = (x / this.image.offsetWidth) * 100;
        const yPercent = (y / this.image.offsetHeight) * 100;
        
        this.zoomResult.style.backgroundPosition = `${xPercent}% ${yPercent}%`;
    }
    
    stopZoom() {
        this.isZooming = false;
        this.zoomResult.style.display = 'none';
        
        if (this.isMobile) {
            document.body.style.overflow = 'auto';
        }
    }
    
    destroy() {
        if (this.zoomResult) {
            this.zoomResult.remove();
        }
        this.image.style.cursor = 'default';
        document.body.style.overflow = 'auto';
    }
}

// Global zoom instance
let productZoom = null;

function initializeProductZoom() {
    // Destroy previous instance
    if (productZoom) {
        productZoom.destroy();
    }
    
    // Create new instance (works on all devices now!)
    productZoom = new ResponsiveProductZoom('main-image');
}

// Initialize on page load
document.addEventListener('DOMContentLoaded', function() {
    setTimeout(initializeProductZoom, 100);
});

// Reinitialize on window resize
window.addEventListener('resize', function() {
    initializeProductZoom();
});





