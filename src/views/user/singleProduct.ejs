<div class="py-3 px-4">
    <!-- Main Product Container - Large like Hero Carousel -->
    <div class="carousel-container bg-transparent mx-2 sm:mx-4 my-3 sm:my-5 mt-2 sm:mt-[-10px] rounded-xl sm:rounded-[2rem] lg:rounded-[5.5rem] relative">
        <div>
            <!-- Product Overview Section -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-4 sm:gap-6 lg:gap-10 p-4 sm:p-6 md:p-10 lg:p-14 lg:pb-12 lg:pl-12 lg:pr-12">
                
                <!-- Left Column - Product Images -->
