<style>
    .animate-fadeIn {
        animation: fadeIn 1.2s ease-in-out forwards;
    }
</style>


<nav class="bg-white  fixed top-0 left-0 right-0 z-50 animate-fadeIn">
    <!-- Desktop Navigation -->
    <div class="max-w-7xl mx-auto px-4">
        <div class="flex justify-between h-16">
            <!-- Left Section: Navigation Links -->
            <div class="hidden md:flex items-center space-x-4 pl-0">
                <a href="/" class="text-gray-700 hover:text-black transition-colors">Home</a>

                <!-- Categories Dropdown -->
                <div class="relative group">
                    <button class="flex items-center text-gray-700 hover:text-black">
                        Categories
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div
                        class="absolute z-10 left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                        <div class="py-1">

                            <% categories.forEach((category)=> { %>

                                <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">
                                    <%=category.name%>
                                </a>

                                <% }) %>

                        </div>

                    </div>
                </div>

                <!-- Brands Dropdown -->
                <div class="relative group">
                    <button class="flex items-center text-gray-700 hover:text-black">
                        Brands
                        <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                        </svg>
                    </button>
                    <div
                        class="absolute z-10 left-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                        <div class="py-1">
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Brand 1</a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Brand 2</a>
                            <a href="#" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Brand 3</a>
                        </div>
                    </div>
                </div>

                <a href="/user/products" class="text-gray-700 hover:text-black transition-colors">All Products</a>
            </div>

            <!-- Center: Logo -->
            <div class="flex items-center justify-center absolute left-1/2 transform -translate-x-1/2">
                <img src="/images/audiophile-logo-black.png" alt="Brand" class="h-14 w-auto">
            </div>

            <!-- Right Section: Search, Icons -->
            <div class="hidden md:flex items-center space-x-6 ml-auto">
                        <!-- Search Bar -->
                        <div class="relative">
                            <input id="searchInput" type="text" placeholder="Search..."
                                class="w-32 focus:w-64 transition-all duration-300 px-4 py-1 text-sm text-black border border-gray-300 rounded-full focus:outline-none focus:border-gray-500">
                            <svg id="searchIcon" class="w-4 h-4 absolute right-3 top-1/2 transform -translate-y-1/2 pointer-events-none" fill="none"
                                stroke="black" viewBox="0 0 24 24 " role="button">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                    d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                            </svg>
                            <!-- Result Container -->
                            <div id="searchResult"
                                class="absolute w-64 px-4 py-2 text-sm text-black rounded-md max-h-80 overflow-y-auto  z-50 hidden flex flex-col gap-2">
                            </div>
                        </div>

                <!-- Wishlist Icon with Counter -->
                <div class="relative group">
                    <a href="/wishlist" class="text-gray-700 hover:text-black transition-colors p-1">
                        <i class="far fa-heart text-xl group-hover:scale-110 transition-transform duration-200"></i>
                        <% if (locals.wishlistCount !==undefined) { %>
                            <span
                                class="absolute -top-2 -right-2 bg-black text-white text-xs rounded-full h-5 w-5 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-200 <%= wishlistCount === 0 ? 'opacity-50' : '' %>">
                                <%= wishlistCount %>
                            </span>
                            <% } %>
                    </a>
                </div>

                <!-- Cart Icon with Counter -->
                <div class="relative group">
                    <a href="/cart" class="text-gray-700 hover:text-black transition-colors p-1">
                        <i
                            class="fas fa-shopping-cart text-xl group-hover:scale-110 transition-transform duration-200"></i>
                        <% if (locals.cartCount !==undefined) { %>
                            <span
                                class="absolute -top-2 -right-2 bg-black text-white text-xs rounded-full h-5 w-5 flex items-center justify-center transform group-hover:scale-110 transition-transform duration-200 <%= cartCount === 0 ? 'opacity-50' : '' %>">
                                <%= cartCount %>
                            </span>
                            <% } %>
                    </a>
                </div>

                <!-- User Profile with Dropdown -->
                <div class="relative group">
                    <button class="flex items-center text-gray-700 hover:text-black focus:outline-none">
                        <i class="far fa-user"></i>
                        <% if (locals.user) { %>
                            <span class="ml-2 text-sm text-gray-700">
                                <%= user.name %>
                            </span>
                            <span class="ml-1 w-2 h-2 bg-green-500 rounded-full"></span>
                            <% } else { %>
                                <span class="ml-1 w-2 h-2 bg-red-500 rounded-full"></span>
                                <% } %>
                    </button>
                    <% if (locals.user) { %>
                        <div
                            class="absolute z-10 right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                            <div class="py-1">
                                <a href="/profile"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Profile</a>
                                <a href="/user/logout"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Logout</a>
                            </div>
                        </div>
                        <% }else { %>
                            <div
                            class="absolute z-10 right-0 mt-2 w-48 rounded-md shadow-lg bg-white ring-1 ring-black ring-opacity-5 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                            <div class="py-1 text-center">
                                <a href="/user/login"
                                    class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100">Login</a>
                            </div>
                        <% }%>
                </div>
            </div>

            <!-- Mobile Menu Button -->
            <div class="md:hidden flex items-center">
                <button
                    class="mobile-menu-button p-2 rounded-md hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200">
                    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
    </div>

    <!-- Mobile Menu -->
    <div class="mobile-menu hidden md:hidden transition-all duration-300 ease-in-out">
        <a href="/" class="block py-2 px-4 text-sm hover:bg-gray-100">Home</a>
        <!-- Categories Submenu -->
        <div class="mobile-submenu">
            <button class="w-full flex justify-between items-center py-2 px-4 text-sm hover:bg-gray-100">
                Categories
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div class="hidden bg-gray-50 pl-8">
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Category 1</a>
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Category 2</a>
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Category 3</a>
            </div>
        </div>
        <!-- Brands Submenu -->
        <div class="mobile-submenu">
            <button class="w-full flex justify-between items-center py-2 px-4 text-sm hover:bg-gray-100">
                Brands
                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                </svg>
            </button>
            <div class="hidden bg-gray-50 pl-8">
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Brand 1</a>
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Brand 2</a>
                <a href="#" class="block py-2 px-4 text-sm hover:bg-gray-100">Brand 3</a>
            </div>
        </div>
        <a href="/new-arrivals" class="block py-2 px-4 text-sm hover:bg-gray-100">New Arrivals</a>
        <a href="/deals" class="block py-2 px-4 text-sm hover:bg-gray-100">Deals</a>
        <div class="py-2 px-4">
            <input type="text" placeholder="Search..."
                class="w-full px-4 py-1 text-sm border border-gray-300 rounded-full focus:outline-none focus:border-gray-500">
        </div>
        <!-- Mobile User Profile -->
        <% if (locals.user) { %>
            <div class="mobile-submenu">
                <button class="w-full flex justify-between items-center py-2 px-4 text-sm hover:bg-gray-100">
                    <div class="flex items-center">
                        <i class="far fa-user mr-2"></i>
                        <span>
                            <%= user.name %>
                        </span>
                    </div>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
                    </svg>
                </button>
                <div class="hidden bg-gray-50 pl-8">
                    <a href="/profile" class="block py-2 px-4 text-sm hover:bg-gray-100">Profile</a>
                    <a href="/logout" class="block py-2 px-4 text-sm hover:bg-gray-100">Logout</a>
                </div>
            </div>
            <% } else { %>
                <a href="/login" class="block py-2 px-4 text-sm hover:bg-gray-100">
                    <i class="far fa-user mr-2"></i>
                    Login
                </a>
                <% } %>
    </div>
</nav>

<!-- Add a spacer to prevent content from hiding behind the fixed navbar -->
<div class="h-16"></div>

<script>
    // Mobile menu toggle
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const mobileSubmenus = document.querySelectorAll('.mobile-submenu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('hidden');
    });

    // Handle mobile submenus
    mobileSubmenus.forEach(submenu => {
        const button = submenu.querySelector('button');
        const content = submenu.querySelector('div');

        button.addEventListener('click', () => {
            content.classList.toggle('hidden');
            const svg = button.querySelector('svg');
            svg.style.transform = content.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        });
    });



</script>

<script src="/js/search-header.js"></script>
<script src="https://cdn.jsdelivr.net/npm/axios@1.6.7/dist/axios.min.js"></script>
