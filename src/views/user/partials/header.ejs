<script>
    // Mobile menu toggle
    const mobileMenuButton = document.querySelector('.mobile-menu-button');
    const mobileMenu = document.querySelector('.mobile-menu');
    const mobileSubmenus = document.querySelectorAll('.mobile-submenu');

    mobileMenuButton.addEventListener('click', () => {
        mobileMenu.classList.toggle('active');
        const isActive = mobileMenu.classList.contains('active');
        
        // Animate hamburger to X
        const svg = mobileMenuButton.querySelector('svg');
        if (isActive) {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>';
        } else {
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
        }
    });

    // Handle mobile submenus
    mobileSubmenus.forEach(submenu => {
        const button = submenu.querySelector('button');
        const content = submenu.querySelector('div');
        const svg = button.querySelector('svg');

        button.addEventListener('click', () => {
            // Close other submenus
            mobileSubmenus.forEach(other => {
                if (other !== submenu) {
                    const otherContent = other.querySelector('div');
                    const otherSvg = other.querySelector('svg');
                    otherContent.classList.add('hidden');
                    otherSvg.style.transform = 'rotate(0deg)';
                }
            });

            // Toggle current submenu
            content.classList.toggle('hidden');
            svg.style.transform = content.classList.contains('hidden') ? 'rotate(0deg)' : 'rotate(180deg)';
        });
    });

    // Mobile search toggle
    const mobileSearchBtn = document.getElementById('mobileSearchBtn');
    const mobileSearchBar = document.getElementById('mobileSearchBar');

    if (mobileSearchBtn) {
        mobileSearchBtn.addEventListener('click', () => {
            mobileSearchBar.classList.toggle('hidden');
            if (!mobileSearchBar.classList.contains('hidden')) {
                mobileSearchBar.querySelector('input').focus();
            }
        });
    }

    const profileBtn = document.getElementById('profile-Btn')
    const profileDrop = document.getElementById('profile-drop')
    profileBtn.addEventListener('click',()=>{
        profileDrop.classList.toggle('hidden')
    })

    // Close mobile menu when clicking outside
    document.addEventListener('click', (e) => {
        if (!mobileMenuButton.contains(e.target) && !mobileMenu.contains(e.target) && mobileMenu.classList.contains('active')) {
            mobileMenu.classList.remove('active');
            const svg = mobileMenuButton.querySelector('svg');
            svg.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>';
        }
    });
</script>

